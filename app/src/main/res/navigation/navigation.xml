<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.roaddamagedetector.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/navigation_addRoad"
        android:name="com.example.roaddamagedetector.ui.AddRoadActivity"
        android:label="Add Road"
        tools:layout="@layout/activity_add_road" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.roaddamagedetector.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>